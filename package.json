{
    "name": "yalantis-secret-santa",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "start": "nodemon server.js",
        "migrate": "npx sequelize-cli db:migrate",
        "migrate:reset": "npx sequelize-cli db:migrate:undo:all && npm run migrate",
        "seed": "npm run migrate:reset && npx sequelize-cli db:seed:all",
        "test": "NODE_ENV=test jest --runInBand --timeout=100000",
        "pretest": "cross-env NODE_ENV=test npm run migrate:reset",
        "coverage": "npm run pretest && jest --coverage && cat ./coverage/lcov.info | coveralls"
    },
    "jest": {
        "testEnvironment": "node",
        "coveragePathIgnorePatterns": [
            "/node_modules/"
        ],
        "verbose": true
    },
    "author": "Max Koldun",
    "license": "ISC",
    "dependencies": {
        "body-parser": "^1.19.1",
        "express": "^4.17.2",
        "livr": "^2.3.3",
        "livr-extra-rules": "^1.2.1",
        "sequelize": "^6.14.0",
        "sqlite3": "^5.0.2",
        "swagger-ui-express": "^4.3.0"
    },
    "devDependencies": {
        "cross-env": "^7.0.3",
        "jest": "^27.4.7",
        "sequelize-cli": "^6.4.1",
        "supertest": "^6.2.2"
    }
}